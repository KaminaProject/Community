{
    "debug": false,
    "verbose": false,
    
    "logging": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "simple": {
                "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
            }
        },

        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "level": "DEBUG",
                "formatter": "simple",
                "stream": "ext://sys.stdout"
            },

            "file": {
                "class": "logging.handlers.RotatingFileHandler",
                "level": "INFO",
                "formatter": "simple",
                "filename": "kamina.log",
                "maxBytes": 10485760,
                "backupCount": 20,
                "encoding": "utf8"
            },

            "syslog": {
                "class": "logging.handlers.SysLogHandler",
                "level": "INFO",
                "formatter": "simple",
                "address": "/dev/log"
            }
        },

        "root": {
            "level": "INFO",
            "handlers": ["syslog"],
            "propagate": false
        }
    }
}
